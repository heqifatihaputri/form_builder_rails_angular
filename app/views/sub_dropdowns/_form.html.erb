<div ng-app="formSubDropdown">
  <div ng-controller="SubDropdownController">
    <div class="row">
      <div class="col-md-8">
        <form ng-submit="addSubDropdown()">
          <div class="form-group">
            <input type="text" class="form-control" name="choice_name" ng-model="newSubDropdown.choice_name" placeholder="Dropdown" />
              <br><b>Choice name : </b>{{newSubDropdown.choice_name}}
          </div>
          <div class="form-group">
            <label>Price : </label>
            <input type="text" class="form-control" name="price" ng-model="newSubDropdown.price">
            <br><b>Price : </b>{{newSubDropdown.price}}
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>

<style type="text/css">
  .css-form input.ng-invalid.ng-touched {
    background-color: #FA787E;
  }

  .css-form input.ng-valid.ng-touched {
    background-color: #78FA89;
  }
</style>