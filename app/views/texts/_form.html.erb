<div ng-app="formText">
  <div ng-controller="TextController">
    <div class="row">
      <div class="col-md-6">
        <form ng-submit="addText()">
          <div class="form-group">
            <input type="text" class="form-control" name="label_name" ng-model="newText.label_name" placeholder="Text" />
              <br><b>Label name : </b>{{newText.label_name}}
          </div>
          <div class="form-group">
            <label>Require Field</label>
            <input type="checkbox" name="required_field" ng-model="newText.required_field">
            <p>{{newText.required_field}}</p>
          </div>
          <div class="form-group">
            <label>Half Width</label>
            <input type="checkbox" name="half_width" ng-model="newText.half_width">
            <p>{{newText.half_width}}</p>
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
      <!-- <div class="col-md-6">
        <label>{{newText.label_name}}</label>
        <input type="text" class="form-control" name="text">
      </div> -->
    </div>
  </div>
</div>

<style type="text/css">
  .css-form input.ng-invalid.ng-touched {
    background-color: #FA787E;
  }

  .css-form input.ng-valid.ng-touched {
    background-color: #78FA89;
  }
</style>